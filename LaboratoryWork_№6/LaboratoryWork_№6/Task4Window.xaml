<Window x:Class="LaboratoryWork__6.Task4Window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LaboratoryWork__6"
        mc:Ignorable="d"
        Title="Проверка матрицы на симметричность" Height="650" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"></RowDefinition>
            <RowDefinition Height="2*"></RowDefinition>
            <RowDefinition Height="2*"></RowDefinition>
            <RowDefinition Height="2*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <Image Grid.Row="0" Source="/task4_image.jpg" HorizontalAlignment="Center" VerticalAlignment="Center" />
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="0" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center" Text="Введите размер матрицы: "></TextBlock>
            <TextBox x:Name="SizeTextBox"  Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Height="Auto" Width="500"></TextBox>
            <Button  Grid.Row="2" Content="Создать" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center" Click="CreateMatrix_Click"></Button>
        </Grid>

        <Grid Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="0" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center" Text="Введите элементы построчно (через пробел)"></TextBlock>
            <TextBox  x:Name="InputTextBox" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Height="Auto" Width="500"></TextBox>
            <Button  Grid.Row="2" Content="Проверить" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center" Click="CheckSymmetry_Click"></Button>
        </Grid>
        
        <Grid Grid.Row="3">
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="0" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center" Text="Результат:"></TextBlock>
            <TextBlock Grid.Row="1" x:Name="ResultTextBlock"  HorizontalAlignment="Center" VerticalAlignment="Center"   FontSize="10" ></TextBlock>
        </Grid>

        <WrapPanel Grid.Row="4" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Content="Предыдущее"  FontSize="15" Margin="10" Click="Task4toTask3"></Button>
            <Button Content="На главную" FontSize="15" Margin="10" Click="MainWindow_Click"></Button>
            <Button Content="Следующее" FontSize="15" Margin="10" Click="Task4toTask5"></Button>
        </WrapPanel>
    </Grid>
</Window>
