<Window x:Class="LaboratoryWork__6.Task6Window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LaboratoryWork__6"
        mc:Ignorable="d"
        Title="Task6Window" Height="950" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"></RowDefinition>
            <RowDefinition Height="2*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <Image Grid.Row="0" Source="/task6_image.jpg" HorizontalAlignment="Center" VerticalAlignment="Center" />
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="0" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center" Text="Введите оклад:"></TextBlock>
            <TextBox x:Name="InputTextWage"  Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Height="Auto" Width="500"></TextBox>
            <TextBlock Grid.Row="2" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center" Text="Введите количество отработанных дней в месяце:"></TextBlock>
            <TextBox  x:Name="InputTextDays" Grid.Row="3" HorizontalAlignment="Center" VerticalAlignment="Center" Height="Auto" Width="500"></TextBox>
            <TextBlock Grid.Row="4" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center" Text="Введите номер месяца (в феврале 28 дней):"></TextBlock>
            <TextBox  x:Name="InputTextMonth" Grid.Row="5" HorizontalAlignment="Center" VerticalAlignment="Center" Height="Auto" Width="500"></TextBox>
            <Button  Grid.Row="6" Content="Отправить" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center" Click="CalcSumm"></Button>
        </Grid>
        <Grid Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="0" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center" Text="Результат:"></TextBlock>
            <TextBlock Grid.Row="1" x:Name="ResultTextBlock"  HorizontalAlignment="Center" VerticalAlignment="Center"   FontSize="15" ></TextBlock>
        </Grid>
        <WrapPanel Grid.Row="3" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Content="Предыдущее"  FontSize="15" Margin="10" Click="Task6toTask5"></Button>
            <Button Content="На главную" FontSize="15" Margin="10" Click="MainWindow_Click"></Button>
        </WrapPanel>
    </Grid>
</Window>
